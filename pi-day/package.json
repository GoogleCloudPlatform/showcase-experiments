{
    "name": "pi-day",
    "version": "1.0.0",
    "description": "31 trillion digits of pi visualized",
    "private": true,
    "license": "MIT",
    "scripts": {
        "dev": "parcel watch index.html --public-url=/experiment/pi/dist/",
        "build": "parcel build index.html --public-url=/experiment/pi/dist/ && yarn build-server",
        "build-server": "cp -a server/. dist",
        "clean": "rm -rf dist",
        "deploy": "yarn clean && yarn build"
    },
    "author": {
        "name": "Mathias Paumgarten",
        "email": "mail@mathias-paumgarten.com"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "react": "^16.7.0",
        "react-dom": "^16.7.0",
        "react-router-dom": "^4.3.1"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.7",
        "@types/react": "^16.8.1",
        "@types/react-dom": "^16.0.11",
        "@types/react-router-dom": "^4.3.1",
        "autoprefixer": "^9.7.6",
        "node-sass": "^7.0.0",
        "parcel-bundler": "^1.11.0",
        "postcss-modules": "^1.4.1",
        "sass": "^1.16.1",
        "tslint": "^5.12.1",
        "typescript": "^3.2.4"
    }
}
